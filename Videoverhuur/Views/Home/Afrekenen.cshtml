@model List<Film>
@{
    ViewData["Title"] = "Afrekenen";
}

<h2>Afrekenen</h2>
@if (Model != null || Model.Count() != 0)
{
    decimal totaal = 0;
    <table class="table">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Prijs</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var film in Model)
            {
                <tr>
                    <td>@film.Titel</td>
                    <td>@Html.DisplayFor(f => film.Prijs)</td>
                </tr>
                totaal += film.Prijs;
            }
            <tr>
                <td><b>Totaal</b></td>
                <td><b>€ @totaal</b></td>
            </tr>
        </tbody>
    </table>
}
else
{
    <h3>Er bevinden zich geen films in het winkelmandje</h3>
}

<p>Wordt gefactureerd aan:</p>
<p>@ViewBag.Klant.Naam</p>
<p>@ViewBag.Klant.Straat_Nr</p>
<p>@ViewBag.Klant.Gemeente</p>

